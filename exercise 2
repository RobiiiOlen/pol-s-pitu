        {



        /*mina sisestan arvu ja programm 체tleb mulle mis aastaajaga tegemist on*/
        /* uut 천ppisin goto  meetodi, case meetodi ja ToInt16 meetodi(s천bra kaudu)*/
            short kuu;
        L03: Console.Write("Sisesta kuu number (1-12) -->");
            kuu = Convert.ToInt16(Console.ReadLine());

            switch (kuu)
            {
                case 12:
                case 1:
                case 2: Console.Write("\nTalv\n\n"); break;
                case 3:
                case 4:
                case 5: Console.Write("\nKevad\n\n"); break;
                case 6:
                case 7:
                case 8: Console.Write("\nSuvi\n\n"); break;
                case 9:
                case 10:
                case 11: Console.Write("\nS체gis\n\n"); break;

                default: Console.Write("\n\nVIGA!\n"); goto L03;
                    
            }
            Console.ReadLine();



        }
